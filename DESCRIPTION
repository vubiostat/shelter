Package: shelter
Type: Package
Title: Support for Secure API Key Management
Version: 0.1.1
Authors@R: c(
    person("Benjamin", "Nutter", email = "benjamin.nutter@gmail.com", 
           role = c("ctb", "aut")),
    person("Shawn", "Garbett", email = "Shawn.Garbett@vumc.org",
